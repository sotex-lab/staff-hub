{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install recommended extensions",
            "command": "./.vscode/extensions.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "windows": {
                "command": ".\\.vscode\\extensions.ps1"
            },
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "never",
                "panel": "dedicated"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}
